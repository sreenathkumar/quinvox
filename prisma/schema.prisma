
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @map("_id")
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  role          Role?     @default(user)
  plan          Plan      @default(free)  
  planExpires   DateTime? 
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  invoices      Invoice[]
  clients       Client[]
  billers       Biller[]

  @@unique([email])
  @@map("user")
}

enum Plan{
  free
  pro
}

enum Role{
  admin
  user
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Invoice {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   
  user          User     @relation(fields:[userId], references:[id])
  invoiceNumber String   @unique
  biller        Biller?  @relation(fields:[billerId], references:[id])
  billerId      String?  
  billerName    String
  billerEmail   String
  billerPhone   String?
  billerAddress String
  client        Client?   @relation(fields:[clientId], references:[id])
  clientId      String?
  clientType    ProfileType
  clientName    String
  clientAddress String
  clientEmail   String
  date          DateTime
  dueDate       DateTime
  items         Item[]
  tax           Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

enum ProfileType{
  Individual
  Business
  Company
}

type Item{
  id          String
  description String
  quantity    Int 
  unit_price  Float
}

model UserQuery{
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  status    QueryStatus?  @default(pending)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum QueryStatus{
  pending
  handled
}

model Client{
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   
  user      User        @relation(fields:[userId], references:[id])
  type      ProfileType
  name      String
  email     String      
  address   String
  phone     String?
  country   String?
  invoices  Invoice[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Biller{
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   
  user      User        @relation(fields:[userId], references:[id])
  type      ProfileType
  name      String
  email     String      
  address   String
  phone     String?
  country   String?
  invoices  Invoice[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}